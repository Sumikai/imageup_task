<!DOCTYPE html>
<html>
  <head>
    <title>Plog</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">Plog</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
              <a class="navbar-brand" href="/blogs/top">HOME</a>
          </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                
                <li><%= link_to "リスト", blogs_path %></li>
                <% if logged_in? %>
                  <li><%= link_to 'つぶやく', new_blog_path %></li>
                  <li><%= link_to "お気に入り", favorite_blogs_path %></li>
                  <li><%= link_to "設定", user_path(current_user.id) %></li>
                  <li><%= link_to "ログアウト", session_path(current_user.id), method: :delete %></li>
                <% else %>
                  <li><%= link_to "会員登録", new_user_path %></li>
                  <li><%= link_to "ログイン", new_session_path %></li>
                <% end %>
                
              </ul>
            </div>
        </div>
      </nav>
    </header>
    
    <%= yield %>
    
    <footer>
      <div class="footer_content row">
        <div class="col-xs-12 col-md-12">
          <p>Testページ</p>
          <p>© 2017_09class HASHIMOTO Jun.</p>
        </div>
      </div>
    </footer>
  </body>
</html>