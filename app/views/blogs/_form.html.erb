<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
    
    <%= form_with(model: @blog, local: true ,url: choose_new_or_edit) do |form| %>
      <% if @blog.errors.any? %>
        <div id="error_explanation">
          <h2><%= @blog.errors.count %>件のエラーがあります。</h2>
            <% @blog.errors.full_messages.each do |msg| %>
              <p><%= msg %></p>
            <% end %>
        </div>
      <% end %>
    
      <%= form.label :title %>
      <%= form.text_field :title, size:40 %>
     
      <%= form.label :content %>
      <%= form.text_area :content, :size => "42x3" %>
      
      <p><%= form.file_field :image %></p>
      <%= form.hidden_field :image_cache %>
     
      <%= form.submit "投稿", :class => 'btn btn-success' %>
    <% end %>
    <br>
    <%= link_to "戻る", blogs_path, :class => 'btn btn-default btn-block' %>
  </div>
</div>