<div class="row">
  <div class="col-xs-12 col-md-6 col-md-offset-3">
  <h1>詳細画面</h1>
    <p><%= notice %></p>
  
    <table>
      <tr><td><b>タイトル</b></td></tr>
      <tr><td><%= @blog.title %></td></tr>
      
      <tr><td><b>内容</b></td></tr>
      <tr><td><%= @blog.content %></td></tr>
      
      <tr><td><%= image_tag @blog.image.url %></td></tr>
    </table>
    
    <% unless @blog.user_id == current_user.id %>
      <% if @favorite.present? %>
        <%= link_to 'お気に入り解除', favorite_path(blog_id: @blog.id), method: :delete, class: 'btn btn-danger' %>
      <% else %>
        <%= link_to 'お気に入りする', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
      <% end %>
    <% end %>
    
    <p><%= link_to "戻る", blogs_path, :class => 'btn btn-default' %></p>
  </div>
</div>